{{> header}}

  <section class="featured-content">
    <h3>Featured films</h3>
    {{#featuredEntities}}
    <article>
      <a class="quiet-link" href="{{url}}">
        {{#image}}
        <img src="{{image}}"></img>
        {{/image}}
        {{#hero-small}}
        <img src="{{hero-small}}"></img>
        {{/hero-small}}
        <h4>{{label}}</h4>
        <p>{{blurb}}</p>
      </a>
    </article>
    {{/featuredEntities}}
  </section>

{{> footer}}

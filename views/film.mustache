{{> header}}
  <section class="introduction">
    {{#film.mainStar}}
    <p>The {{film.year}} {{film.adjective}}, {{film.label}}, starred {{film.mainStar.label}} as {{film.mainStar.character}}.</p>
    {{/film.mainStar}}
    <p>{{film.blurb}}</p>
  </section>
  <section class="link-grid cast">
    <h2>Cast</h2>
    <ul>
      {{#film.cast}}
      <li>
        {{> rich-link}}
      </li>
      {{/film.cast}}
    </ul>
  </section>
{{> footer}}
